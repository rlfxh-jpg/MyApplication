<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SleepCycleAlarm.FloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">@dimen/fabWidth</item>
        <item name="android:layout_height">@dimen/fabHeight</item>
        <item name="android:background">@drawable/button_fab_extended</item>
        <item name="android:drawableStart">@drawable/ic_add</item>
        <item name="android:textColor">@color/colorIconsActiveFocusedNegative</item>
    </style>
    <style name="Theme.SleepCycleAlarm.FloatingActionButton2" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">@dimen/fabWidth</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/button_fab_extended</item>
        <item name="android:textColor">@color/colorIconsActiveFocusedNegative</item>
    </style>
    <style name="Theme.SleepCycleAlarm.FloatingActionButton.NoBackground" parent="Theme.SleepCycleAlarm.FloatingActionButton">
        <item name="android:background">@drawable/button_fab_extended_no_background</item>
        <item name="android:drawableStart">@null</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="circleImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>